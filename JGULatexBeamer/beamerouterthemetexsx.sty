% Frametitle / Head
\defbeamertemplate*{frametitle}{texsx}
{
%\vskip.1cm% Distance between upper slide edge to frame title
\hspace{-0.25cm}
\begin{beamercolorbox}[wd=\the\paperwidth,ht=1.35cm]{frametitle} 
	\begin{tikzpicture}
		\useasboundingbox[fill=white] (0,0) rectangle(\the\paperwidth,\the\paperheight);
		%Background navigation sections
		\draw[fill=jgudarkgrey,draw=none] (1.405,1) rectangle (1.05\paperwidth,1.4) node[midway,text=white] {\tiny\insertnavigation{.75\paperwidth}};		
		%JGU logo
		\node[anchor=south west, inner sep=0pt] (zero) at (0,-0.005)
		{\includegraphics[height=1.4cm, keepaspectratio]{Logos/jgu_logo_kasten.pdf}};
		%frame(sub)title background
		\draw[fill=jgulightgrey,draw=none] (1.405,0) rectangle (1.05\paperwidth,1);
		%frame(sub)title
		\ifx\insertframesubtitle\@empty%
			\node[inner sep = 0pt,anchor=west,white,font=\large] at (1.6,.5) {\insertframetitle};
		\else%
			{
			\node[inner sep = 0pt,anchor=west,text=white,font=\large] at (1.6,.75) {\insertframetitle};
			\node[inner sep = 0pt,anchor=west,text=white,font=\small] at (1.6,.25) {\insertframesubtitle};
			}
		\fi
		%\node[anchor=south east,inner sep=0pt] (right) at (1.007\paperwidth,0.0) {\insertlogo};
	
  \end{tikzpicture}
\end{beamercolorbox}
}


