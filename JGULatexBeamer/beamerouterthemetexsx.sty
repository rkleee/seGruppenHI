% Footline
\def\beamer@theme@footline@empty{}


\def\beamer@theme@footline@authorinstitutetitle{
  \defbeamertemplate*{footline}{miniframes theme}
  {%
    \begin{beamercolorbox}[colsep=0.5pt]{upper separation line foot}
    \end{beamercolorbox}
    \hbox{
		\hspace{-0.2cm}
		
		\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.5ex,dp=1.125ex,%
			leftskip=.3cm,rightskip=.3cm]{author in head/foot}%
			{\usebeamerfont{author in head/foot}\insertshortauthor}%
		\end{beamercolorbox}%
		
		\begin{beamercolorbox}[wd=.675\paperwidth,ht=2.5ex,dp=1.125ex,%
			leftskip=.3cm,rightskip=.3cm]{title in head/foot}%
			\hfill
			{\usebeamerfont{title in head/foot}\insertshortinstitute}%
		\end{beamercolorbox}}%
		
		\begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,%
			leftskip=.3cm,rightskip=.3cm plus1fil]{section in head/foot}%
			{\insertshorttitle\hfill\insertframenumber{}/\inserttotalframenumber}%
		\end{beamercolorbox}
		
		\begin{beamercolorbox}[colsep=1.5pt]{lower separation line foot}
    \end{beamercolorbox}
  }
}

\def\beamer@theme@footline@authorinstitute{
  \defbeamertemplate*{footline}{miniframes theme}
  {%
    \begin{beamercolorbox}[colsep=1.5pt]{upper separation line foot}
    \end{beamercolorbox}
	\begin{beamercolorbox}[]{}%[ht=2.5ex,dp=1.125ex, leftskip=.3cm,rightskip=.3cm plus1fil]{}%{author in head/foot}
		\begin{tikzpicture}
			\useasboundingbox[fill=white] (0,0) rectangle(\the\paperwidth,.3);
			\draw[fill=jgudarkgrey,draw=none] (0,0) rectangle (.25\paperwidth,.3) node[midway,text=white] {\insertshortauthor};
			\draw[fill=jgulightgrey,draw=none] (.25\paperwidth,0) rectangle (.9\paperwidth,.3) node[midway,text=white] {\insertshortinstitute\hspace{2cm}\insertdate};
			\draw[fill=jgured,draw=none] (.9\paperwidth,0) rectangle (\the\paperwidth,.3) node[midway,text=white] {\insertframenumber{}/\inserttotalframenumber};
		\end{tikzpicture}
     \end{beamercolorbox}%	
    \begin{beamercolorbox}[colsep=1.5pt]{lower separation line foot}
    \end{beamercolorbox}
  }
}

