%%Authorname,Title,Date

\defbeamertemplate*{title page}{texsx}[1][]
{ 
   \ifx\insertsubtitle\@empty%
		%without subtitle
		\vskip5.5cm%
		\begin{beamercolorbox}[wd=12cm,right,sep=8pt,#1]{title page header}
			\usebeamerfont{title}\inserttitle\par%%
		\end{beamercolorbox}%
		  \vskip.9cm%
		\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
			\usebeamerfont{author}\insertauthor%
		\end{beamercolorbox}
			\vskip0.15cm%
		\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
			\usebeamerfont{author}\insertinstitute%
		\end{beamercolorbox}
			\vskip0.15cm%
		\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{date}
			\usebeamerfont{author}\insertdate%
		\end{beamercolorbox}
		
		%with subtitle
		\else%
			\vskip4.5cm%
			\begin{beamercolorbox}[wd=12cm,right,sep=8pt,#1]{title page header}
				\usebeamerfont{title}\inserttitle\par%%
			\end{beamercolorbox}%
			\vskip0.15cm%
			\begin{beamercolorbox}[wd=12cm,right,sep=8pt,#1]{title page header}
				\usebeamerfont{subtitle}\insertsubtitle\par%%
			\end{beamercolorbox}%
			    \vspace*{\fill}
			\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
			\usebeamerfont{author}\insertauthor%
			\end{beamercolorbox}
			\vskip0.15cm%
			\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
			\usebeamerfont{author}\insertinstitute%
			\end{beamercolorbox}
			\vskip0.15cm%
			\begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{date}
			\usebeamerfont{author}\insertdate%
			\end{beamercolorbox}
			\vskip-0.5cm% 
		\fi
}

